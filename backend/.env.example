# Environment Configuration for Backend API
# Copy this to .env and fill in your values

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
HOST=127.0.0.1
PORT=5000

# Secret Keys (Generate new ones for production!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB_NAME=sentra_encryption
MONGO_COLLECTION_USERS=users
MONGO_COLLECTION_FILES=encrypted_files
MONGO_COLLECTION_RECIPIENTS=recipients

# File Storage
UPLOAD_FOLDER=./data/uploads
ENCRYPTED_FOLDER=./data/encrypted
DECRYPTED_FOLDER=./data/decrypted
KEYS_FOLDER=./data/keys
METADATA_FOLDER=./data/metadata
TEMP_FOLDER=./data/temp
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Security
BCRYPT_ROUNDS=12
TOKEN_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# AI Sensitivity Analysis (Optional)
AI_ANALYSIS_ENABLED=true
AI_API_KEY=your-ai-api-key-if-needed

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
